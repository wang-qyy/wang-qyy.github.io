
{
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": "./",
    "strict": true,
    "types": [
      "node"
    ],
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"],
      "@kernel/*": ["src/kernel/*"],
      "@AssetCore/*": ["src/kernel/Asset/*"],
      "@hc/editor-core": ["src/kernel"],
    },
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "mock/**/*",
    "src/**/*",
    "config/**/*",
    ".umirc.ts",
    "typings.d.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ]
}
